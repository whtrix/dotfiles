setopt interactivecomments
bindkey -v
alias ll='ls -alFG'
export PS1='[%~]
 # '

# history
setopt share_history
setopt hist_ignore_all_dups
setopt hist_reduce_blanks
zshaddhistory() {
    [[ "$?" == 0 ]]
}

# XDG defaults (set only if not already defined)
typeset -gx XDG_CONFIG_HOME=${XDG_CONFIG_HOME:-$HOME/.config}
typeset -gx XDG_CACHE_HOME=${XDG_CACHE_HOME:-$HOME/.cache}
typeset -gx XDG_DATA_HOME=${XDG_DATA_HOME:-$HOME/.local/share}
typeset -gx XDG_STATE_HOME=${XDG_STATE_HOME:-$HOME/.local/state}
# XDG:less
typeset -gx LESSHISTFILE=${LESSHISTFILE:-$XDG_STATE_HOME/less/history}
# XDG:kube
typeset -gx KUBECONFIG=${KUBECONFIG:-$XDG_CONFIG_HOME/k8s/config}
typeset -gx KUBECACHEDIR=${KUBECACHEDIR:-$XDG_CACHE_HOME/k8s/cache}

